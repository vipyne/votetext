
<% if @show %>
<div class="explain">
  <p>sweet.  a text will be sent to <span><%= @user.twilio_phonenumber @user %></span> with the following info:</p>
</div>

  <% @show.each do |k,v| %>
<div class="election-info">
  <p class="dates">
    <span class="k"><%= k %> :</span>
    <span class="n"><%= v %></span>
    <ul class="rep-info hidden">
      <section class="facts">more info to come</section>
    </ul>
  </p>
</div>
  <% end %>

<div class="explain large-12 columns text-center">
  <div></div>
    <%= link_to "another address", new_user_path, {:class => "button-type"} %>
</div>

<% elsif @reps %>

<% if @reps.kind_of?(String) %>
  <div class="explain">
    <p><%= @reps %></p>
  </div>

  <div class="try">
    <%= link_to "try again", edit_user_path(@user), {:class => "button-type another"} %>
  </div>

<% else %>

  <div class="explain">
    <p>your representatives:</p>
  </div>
  <p class="facts">
    <% def factoids(facts) %>
    <% facts.each do |k,v| %>
    <li class="rep-info">
      <% unless k == "name" %>
      <span class="k"><%= k %> :</span>
      <% if v.kind_of?(Array) %>
      <% if v[0].kind_of?(Hash) %>
      <% v.each do |h| %>
      <% factoids(h) %>
      <% v = nil %>
      <% end %>
      <% end %>
      <% end %>
      <span class="v">
        <% if v.kind_of?(Array) %>
        <%= v.join(",") %>
        <% else %>
        <%= v %></span>
        <% end %>
      </li>
      <% end %>
      <% end %>
    </p>
    <% end %>

    <% @reps.each do |level| %>
    <% level.each do |office, person| %>
    <div class="reps-info">
      <section class="dates">
        <span class="k"><%= office %> :</span>
        <% person.each do |name| %>
        <span class="n"> <%= name["name"] %></span>
        <% end %>
        <ul class="rep-info hidden">
          <% person.each do |name| %>
          <section class="facts"><% factoids(name) %></section>
          <% end %>
        </ul>
      </section>
    </div>
    <% end %>
    <% end %>

    <div class="container large-6 medium-6 columns">
      <div class="new_user">
        <%= link_to "another address", new_user_path, {:class => "button-type"} %>
      </div>
    </div>

    <% end %>
    <% end %>
